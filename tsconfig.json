{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "target": "es2018",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2018", "DOM"],
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/tests"]
}
