{
  "name": "pocota",
  "description": "Polymorphic compositional tables in React.",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Lars-Erik Bruce",
  "License": "MIT",
  "scripts": {
    "build": "tsc --build --clean && tsc --build",
    "clean": "tsc --build --clean",
    "clean:test": "tsc --build tsconfig.tests.json --clean",
    "test": "npm run clean:test && tsc --project tsconfig.tests.json && cd tests && node --experimental-vm-modules  ../node_modules/jest/bin/jest.js",
    "test:watch-ts": "tsc --project tsconfig.tests.json --watch",
    "test:watch": "cd tests && node --experimental-vm-modules ../node_modules/jest/bin/jest.js --watchAll",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o ./docs"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18  .0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.0.0",
    "@types/react": "18.0.0",
    "@types/react-dom": "18.0.0",
    "@babel/core": "^7.17.8",
    "@faker-js/faker": "6.0.0",
    "@storybook/addon-actions": "^6.5.0-alpha.60",
    "@storybook/addon-essentials": "^6.5.0-alpha.60",
    "@storybook/addon-interactions": "^6.5.0-alpha.60",
    "@storybook/addon-links": "^6.5.0-alpha.60",
    "@storybook/theming": "^6.5.0-alpha.60",
    "@storybook/react": "^6.5.0-alpha.60",
    "@storybook/testing-library": "^0.0.9",
    "babel-loader": "^8.2.4",
    "jest": "27.5.1",
    "typescript": "4.6.3"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "type": "module"
}
